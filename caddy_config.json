{
  "apps": {
    "http": {
      "servers": {
        "sirtunnel": {
          "listen": [":8443"],
          "automatic_https": {
            "disable_redirects": true
          },
          "routes": [
            {
              "match": [
                {
                  "host": ["484.cx", "*.484.cx"]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "localhost:8080"
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    },
    "tls": {
      "automation": {
        "policies": [
          {
            "subjects": ["484.cx", "*.484.cx"],
            "issuers": [
              {
                "module": "acme",
                "email": "your-email@example.com",
                "challenges": {
                  "dns": {
                    "provider": {
                      "name": "cloudflare"
                    }
                  }
                }
              }
            ]
          }
        ]
      }
    }
  }
}
